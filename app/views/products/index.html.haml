%table
  %thead
    %tr
      %th Name
      %th Price
      %th Brand
      %th Category
  - @products.each do |product|
    %tbody
      %tr
        %td= product.name
        %td= product.price
        %td= product.brand.name
        %td= product.category.name
        %td
          = link_to "Add to Cart", orders_create_path(name: product.name, price: product.price), method: :post     
= link_to 'View Cart',orders_index_path
